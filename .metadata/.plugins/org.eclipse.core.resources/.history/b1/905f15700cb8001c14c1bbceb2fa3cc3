package com.algorithms.sort.comparisonsort;

public class InsertionSort {

	public void insertionSortAlgorithm(int[] unsortedArray) {
		for(int elementIndex=0; elementIndex<unsortedArray.length;elementIndex++) {
			int value = unsortedArray[elementIndex];
			int comparisonIndex = elementIndex-1;
			while(unsortedArray[comparisonIndex]>value&&comparisonIndex>=0) {
				unsortedArray[comparisonIndex+1]=unsortedArray[comparisonIndex];
				comparisonIndex--;
			}
			unsortedArray[comparisonIndex+1]=value;
		}
	}
}
